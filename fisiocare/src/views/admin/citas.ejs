<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Lista Citas</title>
  <link rel="stylesheet" href="/css/citas.css" />
  <link rel="stylesheet" href="/css/header.css" />
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <div>
        <%- include('../components/header') %>
        <div class="container">
            <h1>Modficar Citas</h1>
            <% 
              if (citas.length === 0) { 
            %>
              <div class="no-citas" style="text-align:center; color:#395176; margin-top:40px; font-size:1.2rem;">
                No hay citas disponibles
                <div>
                    <img src="/img/no-citas.svg" alt="citas-icon" class="citas-icon" style="width:150px; height:150px; margin-top:20px;">
                </div>
                
                <div>
                    <button class="blue-btn" style="margin-top:20px;">
                    <a href="/citas/agendar">Crear Citas</a>
                </div>
            
              </div>
            <% } else { %>
              <% citas
  .slice()
  .sort((a, b) => new Date(a.fecha) - new Date(b.fecha))
  .forEach(cita => { %>
                <div class="card">
                  <div class="info">
                    <div class="row">
                      <span class="icon">📅</span>
                      <span><%= cita.fecha %> - <%= cita.hora %></span>
                    </div>
                    <div class="row">
                      <span class="icon">🗓️</span>
                      <span><%= cita.tipo %></span>
                      <span class="spacer"></span>
                      <span class="icon">🧍</span>
                      <span><%= cita.modalidad %></span>
                    </div>
                    <div class="row">
                      <span class="icon">🩺</span>
                      <span><%= cita.profesional %></span>
                    </div>
                  </div>
                  <a class="blue-btn" href="/citas/admin/modificar/<%= cita._id %>">Modificar</a>
                  <form action="/citas/admin/eliminar/<%= cita._id %>" method="POST" class="delete-form" style="margin:0;">
                    <button class="red-btn delete-btn" type="button">Eliminar</button>
                  </form>
                </div>
              <% }) %>
            <% } %>
        </div>
    </div>
    <script>
document.querySelectorAll('.cancel-btn').forEach(btn => {
  btn.addEventListener('click', function(e) {
    const form = btn.closest('form');
    Swal.fire({
      title: '¿Cancelar cita?',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#d33',
      cancelButtonColor: '#3085d6',
      confirmButtonText: 'Cancelar',
      cancelButtonText: 'Volver'
    }).then((result) => {
      if (result.isConfirmed) {
        form.submit();
      }
    });
  });
});

document.querySelectorAll('.update-form .blue-btn').forEach(btn => {
  btn.addEventListener('click', function(e) {
    e.preventDefault();
    const form = btn.closest('form');
    Swal.fire({
      title: 'Modificar cita?',
      icon: 'question',
      showCancelButton: true,
      confirmButtonColor: '#006DFA',
      cancelButtonColor: '#3085d6',
      confirmButtonText: 'Reprogramar',
      cancelButtonText: 'Volver'
    }).then((result) => {
      if (result.isConfirmed) {
        form.submit();
      }
    });
  });
});

document.querySelectorAll('.delete-btn').forEach(btn => {
  btn.addEventListener('click', function(e) {
    const form = btn.closest('form');
    Swal.fire({
      title: '¿Eliminar cita?',
      text: "Esta acción no se puede deshacer.",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#d33',
      cancelButtonColor: '#3085d6',
      confirmButtonText: 'Eliminar',
      cancelButtonText: 'Volver'
    }).then((result) => {
      if (result.isConfirmed) {
        form.submit();
      }
    });
  });
});
</script>
</body>
</html>