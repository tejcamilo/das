<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Agendar Citas</title>
  <link rel="stylesheet" href="/css/citas.css" />
  <link rel="stylesheet" href="/css/header.css" />
</head>
<body>
    <div>
        <%- include('../components/header') %>
        <div class="container">
            <% citas.forEach(cita => { %>
                <% if (!cita.disponible) { %>
                    <div class="card">
                    <div class="info">
                        <div class="row">
                        <span class="icon">üìÖ</span>
                        <span><%= cita.fecha %> - <%= cita.hora %></span>
                        </div>
                        <div class="row">
                        <span class="icon">üóìÔ∏è</span>
                        <span><%= cita.tipo %></span>
                        <span class="spacer"></span>
                        <span class="icon">üßç</span>
                        <span><%= cita.modalidad %></span>
                        </div>
                        <div class="row">
                        <span class="icon">ü©∫</span>
                        <span><%= cita.profesional %></span>
                        </div>
                    </div>
                        <form action="/citas/agendar" method="POST" style="margin:0;">
                            <input type="hidden" name="citaId" value="<%= cita._id %>">
                            <button class="blue-btn" type="submit">Reprogramar</button>
                        </form>
                        <form action="/citas/consultar" method="POST" style="margin:0;">
                            <input type="hidden" name="citaId" value="<%= cita._id %>">
                            <button class="red-btn" type="submit">Cancelar</button>
                        </form>
                        
                    </div>
                <% } %>
            <% }) %>

        </div>
    </div>
</body>
</html>